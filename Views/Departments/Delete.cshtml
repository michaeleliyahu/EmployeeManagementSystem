@model EmployeeManagementSystem.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<h2>Delete Department</h2>

<div>
    <h4>Are you sure you want to delete this department?</h4>
    <div>
        <strong>@Model.Name</strong>
    </div>
</div>

<form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete?');">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
