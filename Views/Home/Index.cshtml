@{
    ViewData["Title"] = "Welcome to Employee Management System";
}

<div class="text-center">
    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Employee Management</h5>
                    <p class="card-text">Manage your workforce with comprehensive employee records, including personal details, salary information, and department assignments.</p>
                    <a href="@Url.Action("Index", "Employees")" class="btn btn-primary">View Employees</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-building fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Department Management</h5>
                    <p class="card-text">Organize your company structure by managing departments and tracking employee distribution across different organizational units.</p>
                    <a href="@Url.Action("Index", "Departments")" class="btn btn-success">View Departments</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-chart-bar fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Dashboard & Analytics</h5>
                    <p class="card-text">Get insights into your organization with real-time statistics, employee distribution, and recent hiring trends.</p>
                    <a href="@Url.Action("Index", "Dashboard")" class="btn btn-info">View Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>
